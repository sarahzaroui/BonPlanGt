{% extends "BackBonPlanBackBundle::layout.html.twig" %}
{% block tilte %}
    Administration Bon plan
{% endblock %}
{% block container %}
    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Nouveau mail</h3>
            </div>
            <form method="POST" >
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        <input class="form-control"  placeholder="à:" value="envoie à plusieurs mail">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="subject" placeholder="Object:">
                    </div>
                    <div class="form-group">
                    <textarea id="compose-textarea" name="mailtext" class="form-control" style="height: 200px">
                    </textarea>
                    </div>
                    <div class="form-group">
                        <div class="btn btn-default btn-file">
                            <i class="fa fa-paperclip"></i> Pièce jointe
                            <input type="file" name="attachment">
                        </div>
                        <p class="help-block">Max. 32MB</p>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="pull-right">
                        <!-- /.<button type="button" class="btn btn-default"><i class="fa fa-pencil"></i> Brouillon</button>-->
                        <button type="submit" class="btn btn-primary" name="envoyer" href="{{ path('mailnews_sendallpostu') }}"><i class="fa fa-envelope-o"></i> Envoyer</button>
                    </div>
                    <button type="reset" class="btn btn-default"><i class="fa fa-times"></i> Ignorer</button>
                </div>
                <!-- /.box-footer -->
            </form></div>
        <!-- /. box -->
    </div>

{% endblock %}