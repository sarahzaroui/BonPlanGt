                <td>
                    <ul>
                        <li>
                            <a href="{{ path('categorieevenement_show', { 'idcatev': categorieevenement.idcatev }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('categorieevenement_edit', { 'idcatev': categorieevenement.idcatev }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('categorieevenement_new') }}">Create a new categorieevenement</a>
        </li>
    </ul>
{% endblock %}
