{% extends "BackBonPlanBackBundle::layout.html.twig" %}
{% block tilte %}
    Administration Bon plan
{% endblock %}
{% block container %}
    <h2>Categorie des Evenements</h2>
    <div class="col-md-12" style="padding-bottom: 10px;">
        <a href="{{ path('categorieevenement_new') }}"><button class="btn btn-xs btn-success">Create a new categorieevenement</button></a>
    </div>
    <table class="table" id="example2">
        <thead>
        <tr>
            <th>Idcatev</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for categorieevenement in categorieevenements %}
            <tr>
                <td><a href="{{ path('categorieevenement_show', { 'idcatev': categorieevenement.idcatev }) }}">{{ categorieevenement.idcatev }}</a></td>
                <td>{{ categorieevenement.nom }}</td>
                <td>

                    <a href="{{ path('categorieevenement_show', { 'idcatev': categorieevenement.idcatev }) }}">
                        <button class="btn btn-xs btn-danger"><i class="fa fa-trash"></i></button>
                    </a>

                    <a href="{{ path('categorieevenement_edit', { 'idcatev': categorieevenement.idcatev }) }}">
                        <button class="btn btn-xs btn-primary"><i class="fa fa-edit"></i></button>
                    </a>
                    <a href="{{ path('categorieevenement_show', { 'idcatev': categorieevenement.idcatev }) }}">
                        <button class="btn btn-xs btn-success"><i class="fa fa-eye"></i></button>
                    </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
