{% extends 'base.html.twig' %}

{% block body %}
    <h1>Publicite</h1>

    <table>
        <tbody>
            <tr>
                <th>Idpublicite</th>
                <td>{{ publicite.idpublicite }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ publicite.libelle }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ publicite.type }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ publicite.duree }}</td>
            </tr>
            <tr>
                <th>Tarif</th>
                <td>{{ publicite.tarif }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ publicite.etat }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('publicite_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('publicite_edit', { 'idpublicite': publicite.idpublicite }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
