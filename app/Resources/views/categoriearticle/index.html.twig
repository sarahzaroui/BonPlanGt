        <a href="{{ path('categoriearticle_new') }}"><button class="btn btn-xs btn-success">Create a new cat√©gorie article</button></a>
    </div>
    <table class="table" id="example2">
        <thead>
        <tr>
            <th>Idcatart</th>
            <th>Nom</th>
