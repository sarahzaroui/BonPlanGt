{% extends "tfUserBundle::prestataire.html.twig" %}
{% block tilte %}
    Espace prestataire Bon plan
{% endblock %}
{% block container %}

<section class="content">
    <a class="btn btn-success pull-right" href="{{ path('evennement_new') }}">Nouvelle Réservation</a>
    <br>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Liste des Réservations</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>Numéro de Réservation : {{ reserver.idreservation }} </th>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if reserver.date %}{{ reserver.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nombre de Places Réservés : {{ reserver.nbrePlaces }}</th>
            </tr>
            <tr>
                <th>Utilisateur : {{ user.first_name }}</th>
            </tr>
            <tr>
                <th>Evénement : {{ evenement.nom }}</th>
            </tr>
        </tbody>
    </table>
                    {% if reserver.etat=="en attente" %}
                    <a href="{{ path('reserver_activer', { 'idreservation': reserver.idreservation }) }}" class="btn btn-success">Valider la réservation</a>
                    <a href="{{ path('reserver_annuler', { 'idreservation': reserver.idreservation }) }}" class="btn btn-danger">Annuler la réservation</a>
                    {% endif %}

{% endblock %}
